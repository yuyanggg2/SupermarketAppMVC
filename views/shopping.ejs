<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App - Shopping</title>

  <style>
    body {
      background: linear-gradient(135deg, #fdf1f4, #fbe3f1, #ffd6e6, #ffc1de);
      min-height: 100vh;
      font-family: 'Poppins', sans-serif;
      color: #45223b;
    }

    h2 {
      font-weight: 700;
      color: #d81b60;
    }

    .table-container {
      background: rgba(255, 255, 255, 0.95);
      border-radius: 25px;
      box-shadow: 0 6px 30px rgba(255, 0, 113, 0.25);
      padding: 25px;
      margin-bottom: 50px;
      backdrop-filter: blur(6px);
    }

    thead th {
      background: #f06292 !important;
      color: white !important;
      font-size: 0.9rem;
      letter-spacing: 1px;
      border-radius: 12px;
    }

    td img {
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(255, 0, 113, 0.2);
      transition: transform 0.2s ease;
    }
    td img:hover {
      transform: scale(1.1);
    }

    .btn-primary {
      background: linear-gradient(135deg, #ff80ab, #f50057);
      border: none;
      border-radius: 30px;
      padding: 8px 18px;
      font-weight: 600;
      box-shadow: 0 4px 10px rgba(255, 0, 113, 0.3);
    }

    .btn-primary:hover {
      background: linear-gradient(135deg, #f50057, #ad1457);
    }

    .btn-outline-primary {
      border-radius: 20px;
      border: 2px solid #ec407a;
      color: #ec407a;
      font-weight: 600;
      background: white;
    }

    .btn-outline-primary:hover {
      background: #ec407a;
      color: white;
    }

    .search-box {
      border-radius: 40px;
      box-shadow: 0 4px 12px rgba(255, 0, 113, 0.25);
      border: none;
      padding-left: 20px;
    }

    a.product-link {
      color: #e91e63;
      font-weight: 600;
      text-decoration: none;
    }
    a.product-link:hover {
      text-decoration: underline;
      color: #ad1457;
    }

  </style>
</head>

<body>

  <!-- Navbar -->
  <%- include('partials/header') %>

  <!-- Search -->
  <div class="container mt-4 text-center">
    <form action="/search" method="POST" class="d-flex justify-content-center mb-4">
      <input type="text" name="keyword" class="form-control w-50 me-2 search-box"
             placeholder="üîç Search for a cute product..." required>
      <button type="submit" class="btn btn-primary px-4 rounded-pill">
        Search
      </button>
    </form>
  </div>


  <!-- Product List -->
  <div class="container py-4">
    <div class="text-center my-4">
      <h2>üõçÔ∏è Pink Supermarket</h2>
      <p class="text-muted">Find your dreamy products and add them to your cart üå∏</p>
    </div>

    <div class="table-container">
      <table class="table table-hover align-middle text-center">
        <thead>
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Stock</th>
            <th>Price</th>
            <th>Reviews</th>
            <th>Buy</th>
          </tr>
        </thead>

        <tbody>
        <% products.forEach(p => { %>
          <tr>

            <!-- Product Name: LINK -->
            <td>
              <a href="/product/<%= p.id %>" class="product-link">
                <%= p.productName %>
              </a>
            </td>

            <!-- Image -->
            <td>
              <img src="/images/<%= p.image %>" width="85" height="85" style="object-fit:cover;">
            </td>

            <!-- Quantity -->
            <td><%= p.quantity %></td>

            <!-- Price -->
            <td>$<%= p.price.toFixed(2) %></td>

            <!-- Reviews -->
            <td>
              <a href="/product/<%= p.id %>" class="btn btn-sm btn-outline-primary rounded-pill">
                ‚≠ê Views&Reviews
              </a>
            </td>

            <!-- Buy -->
            <td>
              <form action="/add-to-cart/<%= p.id %>" method="POST">
                <input type="hidden" name="productName" value="<%= p.productName %>">
                <input type="hidden" name="price" value="<%= p.price %>">
                <input type="hidden" name="image" value="<%= p.image %>">
                <input type="hidden" name="quantity" value="1">
                <button type="submit" class="btn btn-primary rounded-pill">
                  üõí Buy
                </button>
              </form>
            </td>

          </tr>
        <% }) %>
        </tbody>

      </table>
    </div>

  </div>

</body>
</html>
