<%- include("partials/headerAdmin") %>

<style>
  body {
    background: linear-gradient(135deg, #1f005c, #5b0060, #870160, #ac255e, #ca485c, #e16b5c, #f39060, #ffb56b);
    min-height: 100vh;
    font-family: "Poppins", sans-serif;
    color: #fff;
  }

  h2 {
    font-weight: 700;
    text-shadow: 0 3px 8px rgba(255, 0, 150, 0.6);
    color: #ffdde1;
  }

  /* Glass card */
  .glass-card {
    background: rgba(255, 255, 255, 0.19);
    backdrop-filter: blur(10px);
    border-radius: 18px;
    padding: 25px;
    box-shadow: 0 6px 20px rgba(255, 80, 160, 0.3);
  }

  table {
    color: white;
  }

  thead {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(6px);
  }

  th {
    color: #ffd6f5;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 14px;
  }

  td {
    vertical-align: middle;
    font-weight: 500;
  }

  img {
    border-radius: 10px;
    transition: 0.25s;
  }

  img:hover {
    transform: scale(1.2);
    box-shadow: 0 0 12px rgba(255, 0, 120, 0.5);
  }

  /* Links */
  a.table-link {
    font-weight: 600;
    color: #ffaad7;
    text-decoration: none;
    transition: 0.2s;
  }

  a.table-link:hover {
    color: #ffdfff;
    text-shadow: 0 0 8px rgba(255, 200, 255, 0.9);
  }

  /* Edit / Delete buttons */
  .btn-edit {
    background: linear-gradient(90deg, #ff9ada, #ff63b8);
    border-radius: 10px;
    padding: 6px 14px;
    font-size: 0.9rem;
    font-weight: 600;
    border: none;
  }

  .btn-delete {
    background: linear-gradient(90deg, #ff596d, #ff2b51);
    border-radius: 10px;
    padding: 6px 14px;
    font-size: 0.9rem;
    font-weight: 600;
    border: none;
  }

  .btn-edit:hover,
  .btn-delete:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 80, 160, 0.5);
  }
</style>


<div class="container mt-5 glass-card">

  <p class="mb-4">Welcome, <%= user.username %> (<%= user.role %>)</p>

  <div class="text-center mb-4">
    <h2>üì¶ Product Inventory</h2>
  </div>

  <table class="table table-hover text-center align-middle">
    <thead>
      <tr>
        <th>Product</th>
        <th>Image</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <% products.forEach(product => { %>
        <tr>
          
            <td class="fw-semibold">
              <%= product.productName %>


          </td>

          <td>
            <img src="/images/<%= product.image %>" width="80">
          </td>

          <td><%= product.quantity %></td>

          <td>$<%= product.price.toFixed(2) %></td>

          <td>
            <a href="/updateProduct/<%= product.id %>" class="btn btn-edit">
              ‚úè Edit
            </a>
          </td>

          <td>
            <a href="/deleteProduct/<%= product.id %>"
               class="btn btn-delete"
               onclick="return confirm('Delete this product?')">
               üóë Delete
            </a>
          </td>

        </tr>
      <% }) %>
    </tbody>

  </table>

</div>

<br><br>
