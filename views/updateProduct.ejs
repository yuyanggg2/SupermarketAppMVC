<%- include("partials/headerAdmin") %>

<style>
  body {
    background: linear-gradient(135deg, #1f005c, #5b0060, #870160, #ac255e, #ca485c, #e16b5c, #f39060, #ffb56b);
    min-height: 100vh;
    font-family: "Poppins", sans-serif;
    color: #fff;
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.19);
    backdrop-filter: blur(12px);
    border-radius: 16px;
    padding: 30px;
    margin-top: 60px;
    box-shadow: 0 6px 25px rgba(255, 120, 190, 0.3);
    max-width: 600px;
  }

  h2 {
    font-weight: 700;
    text-align: center;
    color: #ffe5fa;
    text-shadow: 0 3px 12px rgba(255, 10, 160, 0.4);
  }

  .form-control,
  .form-select {
    border-radius: 10px;
    border: none;
    padding: 14px;
  }

  label {
    font-weight: 600;
    color: #ffe4ff;
  }

  .btn-main {
    background: linear-gradient(90deg, #ff9ada, #ff63b8);
    border-radius: 10px;
    padding: 12px;
    font-size: 1.1rem;
    font-weight: 600;
    border: none;
    width: 100%;
    margin-top: 12px;
  }

  .btn-back {
    color: #ffd9ef;
    font-weight: 600;
    display: inline-block;
    margin-top: 20px;
    transition: 0.3s;
  }

  .btn-back:hover {
    color: #ffffff;
    text-shadow: 0 0 8px rgba(255, 200, 255, 1);
  }
</style>


<div class="container d-flex justify-content-center">
  <div class="glass-card">

    <h2>‚úè Update Product</h2>
    <br>

    <form action="/updateProduct/<%= product.id %>" method="POST" enctype="multipart/form-data">

      <div class="mb-3">
        <label class="form-label">Product Name</label>
        <input type="text" name="name" class="form-control" value="<%= product.productName %>" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Quantity</label>
        <input type="number" name="quantity" class="form-control" value="<%= product.quantity %>" min="0" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Price ($)</label>
        <input type="number" name="price" class="form-control" value="<%= product.price %>" step="0.01" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Current Image</label><br>
        <img src="/images/<%= product.image %>" width="120" style="border-radius:12px;">
      </div>

      <input type="hidden" name="currentImage" value="<%= product.image %>">

      <div class="mb-3">
        <label class="form-label">Upload New Image (optional)</label>
        <input type="file" name="image" class="form-control" accept="image/*">
      </div>

      <button class="btn-main">üíæ Save Changes</button>
    </form>

    <a href="/inventory" class="btn-back">‚Üê Back to Inventory</a>

  </div>
</div>

<br><br>
