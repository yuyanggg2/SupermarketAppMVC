<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #ffe4ec, #ffd3e8, #ffc1e3, #ffb7de);
      font-family: "Poppins", sans-serif;
      min-height: 100vh;
      color: #5a3854;
    }

    h2 {
      font-weight: 700;
      text-align: center;
      margin-top: 20px;
      margin-bottom: 30px;
      color: #d81b60;
    }

    .cart-container {
      background: rgba(255, 255, 255, 0.92);
      border-radius: 25px;
      padding: 35px;
      box-shadow: 0 10px 35px rgba(255, 0, 113, 0.25);
      backdrop-filter: blur(6px);
      margin-bottom: 50px;
    }

    table {
      border-radius: 20px;
      overflow: hidden;
    }

    thead {
      background: linear-gradient(135deg, #ff80ab, #f50057);
      color: white;
      font-size: 1rem;
      text-transform: uppercase;
    }

    td img.cart-img {
      width: 90px;
      height: 90px;
      border-radius: 20px;
      object-fit: cover;
      box-shadow: 0 4px 12px rgba(255, 0, 113, 0.2);
    }

    .qty-input {
      width: 75px;
      height: 40px;
      border-radius: 20px;
      text-align: center;
      border: 1px solid #ffcfe2;
      box-shadow: 0 3px 10px rgba(255, 0, 113, 0.18);
    }

    .btn-pink {
      background: linear-gradient(135deg, #ff80ab, #f50057);
      border: none;
      font-weight: 600;
      color: white;
      border-radius: 30px;
      padding: 10px 25px;
      box-shadow: 0 5px 15px rgba(255, 0, 113, 0.3);
    }

    .btn-pink:hover {
      background: linear-gradient(135deg, #f50057, #ad1457);
    }

    .btn-delete {
      background: linear-gradient(135deg, #ff4e68, #d50000);
      border: none;
      font-weight: 600;
      color: white;
      border-radius: 30px;
      padding: 10px 20px;
      box-shadow: 0 5px 12px rgba(255, 0, 0, 0.25);
    }

    .total-box {
      text-align: end;
      font-size: 1.6rem;
      font-weight: 700;
      color: #ad1457;
      margin-top: 20px;
    }

    .btn-back {
      text-decoration: none;
      background: white;
      border: 2px solid #ec407a;
      padding: 10px 25px;
      border-radius: 25px;
      font-weight: 600;
      color: #ad1457;
      box-shadow: 0 5px 10px rgba(255, 0, 113, 0.2);
    }

    .btn-back:hover {
      background: #ffe4ec;
    }
    
  </style>
</head>

<body>

  <!-- Navbar -->
  <%- include('partials/header') %>

  <div class="container mt-5 cart-container">

    <h2>üõí Your Shopping Cart</h2>

    <% if (cart.length === 0) { %>

      <div class="alert alert-warning text-center rounded-5 fw-semibold">
        üå∏ Your cart is empty. Go buy something cute! üå∏
      </div>

    <% } else { %>

      <table class="table table-hover text-center align-middle mb-4">
        <thead>
          <tr>
            <th>Select</th>
            <th>Product</th>
            <th>Image</th>
            <th>Price</th>
            <th>Qty</th>
            <th>Total</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% let grandTotal = 0; %>

          <% cart.forEach(item => { %>
          <tr>

            <td>
              <input type="checkbox" name="selected[]">
            </td>

            <td class="fw-semibold"><%= item.productName %></td>

            <td>
              <img src="/images/<%= item.image %>" class="cart-img">
            </td>

            <td class="fw-bold">$<%= item.price.toFixed(2) %></td>

            <td>
             <form action="/cart/update" method="POST">
             <input type="hidden" name="productName" value="<%= item.productName %>">
             <input type="number" name="quantity" value="<%= item.quantity %>" min="1" class="qty-input">
             <button class="btn-pink">Update</button>


             </form>

            </td>

            <td class="fw-bold">$<%= (item.price * item.quantity).toFixed(2) %></td>

            <td>
              <form action="/cart/delete" method="POST">
              <input type="hidden" name="productName" value="<%= item.productName %>">
              <button class="btn-delete">Delete ‚ùå</button>
              </form>

              </form>
            </td>

          </tr>

          <% grandTotal += item.price * item.quantity; %>

          <% }) %>
        </tbody>

      </table>

      <div class="total-box">
        Total: $<%= grandTotal.toFixed(2) %>
      </div>

      <div class="mt-4 d-flex justify-content-between">
        <a href="/shopping" class="btn-back">‚Üê Continue Shopping</a>
        <a href="/checkout" class="btn-pink">Checkout ‚Üí</a>
      </div>

    <% } %>

  </div>

</body>
</html>
