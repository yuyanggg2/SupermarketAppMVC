<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: #f4f6fa;
      font-family: "Poppins", sans-serif;
    }

    .cart-table td {
      vertical-align: middle !important;
    }

    .qty-input {
      width: 70px;
      height: 40px;
      text-align: center;
    }

    .qty-cell form {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 10px;           
    }

    .update-btn {
      height: 40px;
      padding: 0 18px;
    }

    .delete-btn {
      height: 40px;
      padding: 0 20px;
      background-color: #dc3545;
    }

    img.cart-img {
      width: 90px;
      height: 90px;
      object-fit: contain;
    }

    .header-row {
      background: #007bff;
      color: white;
      font-size: 1.1rem;
      text-transform: uppercase;
    }

    .bulk-btn {
      padding: 12px 25px;
      font-size: 1rem;
      border-radius: 10px;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/shopping">Supermarket App</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
          <li class="nav-item"><a class="nav-link active" href="/cart">View Cart</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h2 class="fw-bold mb-3 text-primary">üõí Shopping Cart</h2>

    <% if (cart.length === 0) { %>

      <div class="alert alert-info">Your cart is empty.</div>

    <% } else { %>

      <table class="table table-bordered table-hover cart-table bg-white shadow-sm">
        <thead class="header-row text-center">
          <tr>
            <th>SELECT</th>
            <th>PRODUCT</th>
            <th>IMAGE</th>
            <th>PRICE</th>
            <th>QUANTITY</th>
            <th>TOTAL</th>
            <th>ACTION</th>
          </tr>
        </thead>
        <tbody>
          <% let grandTotal = 0; %>

          <% cart.forEach(item => { %>
            <tr class="text-center">
            
              <td>
                <input type="checkbox" name="selected[]" value="<%= item.productName %>">
              </td>

              
              <td class="fw-semibold"><%= item.productName %></td>

              
              <td>
                <img src="/images/<%= item.image %>" class="cart-img">
              </td>

              
              <td class="fw-bold">$<%= item.price.toFixed(2) %></td>

             
              <td class="qty-cell">
                <form action="/cart/update/<%= item.productName %>" method="POST">
                  <input
                    type="number"
                    name="quantity"
                    value="<%= item.quantity %>"
                    min="1"
                    class="form-control qty-input"
                  >
                  <button type="submit" class="btn btn-primary update-btn">Update</button>
                </form>
              </td>

           
              <td class="fw-bold">
                $<%= (item.price * item.quantity).toFixed(2) %>
              </td>

             
              <td>
                <form action="/cart/delete/<%= item.productName %>" method="POST">
                  <button type="submit" class="btn btn-danger delete-btn">Delete</button>
                </form>
              </td>
            </tr>

            <% grandTotal += item.price * item.quantity; %>
          <% }); %>
        </tbody>
      </table>

      <h3 class="text-end fw-bold me-2">Total: $<%= grandTotal.toFixed(2) %></h3>

      <div class="mt-4 d-flex gap-3">
       <a href="/shopping" class="btn btn-secondary bulk-btn">‚Üê Back to Shopping</a>

       <!-- Proceed to Checkout button -->
       <a href="/checkout" class="btn btn-success bulk-btn">Proceed to Checkout ‚Üí</a>
      </div>

    <% } %>
  </div>
</body>
</html>
