<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Purchase History</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <a class="btn btn-secondary" href="/shopping">Shop</a>
      <a class="btn btn-danger" href="/logout">Logout</a>
    </div>
  </nav>

  <div class="container mt-4">
    <h2 class="fw-bold text-primary">ðŸ§¾ Purchase History</h2>

    <% if (orders.length === 0) { %>
      <div class="alert alert-info mt-3">You have no past orders.</div>
    <% } else { %>

    <table class="table table-bordered table-hover bg-white shadow-sm mt-3">
      <thead class="table-dark text-center">
        <tr>
          <th>Order ID</th>
          <th>Date</th>
          <th>Total</th>
          <th>Payment Method</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% orders.forEach(order => { %>
          <tr class="text-center">
            <td><%= order.id %></td>
            <td><%= order.created_at.toLocaleDateString() %></td>
            <td>$<%= Number(order.total).toFixed(2) %></td>
            <td><%= order.payment_method %></td>
            <td>
              <a href="/orderDetails/<%= order.id %>" class="btn btn-sm btn-primary">
                View Items
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <% } %>
  </div>
</body>
</html>
