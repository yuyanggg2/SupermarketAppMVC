<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Purchase History</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

  <%- include('partials/header') %>

  <div class="container mt-4">
    <h2 class="fw-bold text-primary">ðŸ§¾ Purchase History</h2>

    <% if (orders.length === 0) { %>

      <div class="alert alert-info mt-3">You have no past orders.</div>

    <% } else { %>

    
      <table class="table table-bordered table-hover bg-white shadow-sm mt-3">
        <thead class="table-dark text-center">
          <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Total</th>
            <th>Payment Method</th>
            <th>Delivery Method</th> 
    
          </tr>
        </thead>

        <tbody>
          <% orders.forEach(order => { %>
            <tr class="text-center">

              <td><%= order.id %></td>

              <td><%= new Date(order.created_at).toLocaleDateString() %></td>

              <td>$<%= Number(order.total).toFixed(2) %></td>

              <td><%= order.payment_method %></td>

              
              <td>
                <%= order.delivery_method === "delivery" ? "Delivery" : "Pickup" %>
              </td>

              


            </tr>
          <% }) %>
        </tbody>
      </table>

    <% } %>
<%- include('partials/backToShopping') %> 
  </div>
</body>
</html>
