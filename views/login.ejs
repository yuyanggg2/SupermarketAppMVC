<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>

  <style>
    body {
      background: linear-gradient(135deg, #ffb6ff, #ff9ae0, #ff8fc6, #ff94ad, #ff9f99, #ffb095);
      min-height: 100vh;
      font-family: "Poppins", sans-serif;
    }

    .glass-card {
      background: rgba(255, 255, 255, 0.25);
      backdrop-filter: blur(12px);
      border-radius: 20px;
      padding: 40px;
      box-shadow: 0 10px 40px rgba(255, 50, 150, 0.3);
      max-width: 450px;
      margin: 60px auto;
      color: #4a004f;
    }

    .glass-card h1 {
      font-weight: 700;
      text-align: center;
      margin-bottom: 25px;
      color: #7a006c;
    }

    label {
      font-weight: 600;
      color: #6a005c;
    }

    .btn-pink {
      background: linear-gradient(90deg, #ff7adf, #ff64b8, #ff5aa0);
      border: none;
      border-radius: 12px;
      padding: 12px;
      width: 100%;
      font-size: 1.1rem;
      font-weight: 600;
      color: white;
      transition: 0.2s;
    }

    .btn-pink:hover {
      opacity: .85;
    }

    .alert {
      border-radius: 12px;
      font-size: .9rem;
    }

    .navbar {
      background-color: rgba(0,0,0,0.5) !important;
      backdrop-filter: blur(6px);
    }
  </style>
</head>

<body>

  <!-- NAVBAR  -->
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/register">Register</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
        </ul>
      </div>

    </div>
  </nav>


  <!-- LOGIN CARD -->
  <div class="glass-card">

    <h1>Login</h1>

    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(error) { %>
          <p><%= error %></p>
        <% }) %>
      </div>
    <% } %>

    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-success">
        <% messages.forEach(function(message) { %>
          <p><%= message %></p>
        <% }) %>
      </div>
    <% } %>

    <form action="/login" method="POST">

      <div class="mb-3">
        <label for="email" class="form-label">üìß Email</label>
        <input type="email" id="email" name="email" class="form-control shadow-sm" required>
      </div>

      <div class="mb-4">
        <label for="password" class="form-label">üîê Password</label>
        <input type="password" id="password" name="password" class="form-control shadow-sm" required>
      </div>

      <button type="submit" class="btn-pink">‚ú® Login ‚ú®</button>

    </form>

  </div>

</body>
</html>
