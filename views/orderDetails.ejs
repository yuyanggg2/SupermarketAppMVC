<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Order <%= orderId %> Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <a class="btn btn-secondary" href="/purchase-history">Back</a>
    </div>
  </nav>

  <div class="container mt-4">
    <h2 class="fw-bold text-primary">ðŸ“¦ Order #<%= orderId %> Items</h2>

    <table class="table table-bordered table-hover bg-white shadow-sm mt-4">
      <thead class="table-dark text-center">
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
      </thead>

      <tbody>
        <% items.forEach(i => { %>
          <tr class="text-center">
            <td><%= i.product_name %></td>
            <td>$<%= i.price.toFixed(2) %></td>
            <td><%= i.quantity %></td>
            <td>$<%= (i.price * i.quantity).toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
