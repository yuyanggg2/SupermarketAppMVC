<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>

  <style>
    body {
      background: linear-gradient(135deg, #ffc8ff, #ffb0e9, #ff9fd2, #ff97bc, #ff98a8);
      min-height: 100vh;
      font-family: "Poppins", sans-serif;
    }

    .glass-card {
      background: rgba(255, 255, 255, 0.28);
      backdrop-filter: blur(14px);
      border-radius: 22px;
      padding: 40px 45px;
      box-shadow: 0 10px 35px rgba(255, 80, 150, 0.3);
      max-width: 520px;
      margin: 60px auto;
      color: #5a0050;
    }

    .glass-card h1 {
      font-weight: 700;
      text-align: center;
      margin-bottom: 25px;
      color: #6f005f;
    }

    label {
      font-weight: 600;
      color: #6e005e;
    }

    .form-control,
    .form-select {
      border-radius: 12px;
      padding: 12px;
      margin-bottom: 18px;
      border: none;
      box-shadow: 0 0 0 2px rgba(255,255,255,0.4);
    }

    .btn-pink {
      background: linear-gradient(90deg, #ff7adf, #ff60b9, #ff55a2);
      border: none;
      border-radius: 14px;
      padding: 14px;
      width: 100%;
      font-size: 1.15rem;
      font-weight: 600;
      color: white;
      transition: 0.2s;
    }

    .btn-pink:hover {
      opacity: 0.9;
    }

    .alert {
      border-radius: 12px;
      font-size: .9rem;
    }

    .navbar {
      background-color: rgba(0,0,0,0.45) !important;
      backdrop-filter: blur(6px);
    }
  </style>

</head>

<body>

  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
          <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
        </ul>
      </div>
    </div>
  </nav>



  <!-- REGISTER FORM -->
  <div class="glass-card">

    <h1>Register</h1>

    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-danger">
        <% messages.forEach(function(message) { %>
          <p><%= message %></p>
        <% }) %>
      </div>
    <% } %>

    <form action="/register" method="POST">

      <label>ğŸ‘¤ Username</label>
      <input type="text" id="username" name="username" class="form-control"
        value="<%= formData && formData.username ? formData.username : '' %>" required>

      <label>ğŸ“§ Email</label>
      <input type="email" id="email" name="email" class="form-control"
        value="<%= formData && formData.email ? formData.email : '' %>" required>

      <label>ğŸ” Password</label>
      <input type="password" id="password" name="password" class="form-control" required>

      <label>ğŸ  Address</label>
      <input type="text" id="address" name="address" class="form-control"
        value="<%= formData && formData.address ? formData.address : '' %>" required>

      <label>ğŸ“± Contact Number</label>
      <input type="text" id="contact" name="contact" class="form-control"
        value="<%= formData && formData.contact ? formData.contact : '' %>" required>

      <label>ğŸ§‘â€ğŸ’¼ Role</label>
      <select id="role" name="role" class="form-select" required>
        <option value="user" <%= formData && formData.role === 'user' ? 'selected' : '' %>>User</option>
        <option value="admin" <%= formData && formData.role === 'admin' ? 'selected' : '' %>>Admin</option>
      </select>

      <button type="submit" class="btn-pink mt-2">âœ¨ Register âœ¨</button>

    </form>

  </div>

</body>
</html>
