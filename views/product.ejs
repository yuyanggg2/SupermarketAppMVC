<!-- product.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Product Details</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    .product-card {
      max-width: 800px;
      margin: 30px auto;
      padding: 30px;
      border-radius: 15px;
      background: #ffffff;
      box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    }
    .product-image {
      max-width: 260px;
      border-radius: 8px;
    }
    .title-line {
      font-size: 32px;
      font-weight: 700;
      color: #007bff;
      text-align: center;
      margin-bottom: 30px;
    }
    .label {
      font-weight: 600;
      color: #444;
    }
  </style>
</head>

<body class="bg-light">

<div class="container mt-4">

  <!-- USER INFO -->
  <p class="text-end text-muted">
    Welcome, <%= user.username %> (<%= user.role %>)
  </p>

  <!-- PAGE TITLE -->
  <h2 class="title-line">üì¶ Product Details</h2>

  <% if (product) { %>

    <div class="product-card">

      <div class="row align-items-center mb-4">

        <div class="col-md-5 text-center">
          <img src="/images/<%= product.image %>" class="product-image shadow">
        </div>

        <div class="col-md-7">

          <p>
            <span class="label">Product Name:</span><br>
            <%= product.productName %>
          </p>

          <p>
            <span class="label">Quantity Available:</span><br>
            <span class="badge bg-secondary fs-6"><%= product.quantity %></span>
          </p>

          <p>
            <span class="label">Price:</span><br>
            <span class="badge bg-success fs-6">$<%= product.price.toFixed(2) %></span>
          </p>

          <hr>

          <!-- =========================== -->
          <!-- USER VIEW: ADD TO CART      -->
          <!-- =========================== -->
          <% if (user && user.role === "user") { %>
            <form action="/add-to-cart/<%= product.id %>" method="POST" class="mt-3">

              <input type="hidden" name="productName" value="<%= product.productName %>">
              <input type="hidden" name="price" value="<%= product.price %>">
              <input type="hidden" name="image" value="<%= product.image %>">

              <button type="submit" class="btn btn-success btn-lg w-100">
                üõí Add to Cart
              </button>
            </form>
          <% } %>

          <!-- =========================== -->
          <!-- ADMIN VIEW: EDIT / DELETE   -->
          <!-- =========================== -->
          <% if (user && user.role === "admin") { %>

            <div class="d-grid gap-2 mt-4">
              <a href="/updateproduct/<%= product.id %>" class="btn btn-warning btn-lg">
                ‚úèÔ∏è Edit Product
              </a>

              <a href="/deleteproduct/<%= product.id %>"
                 onclick="return confirm('Are you sure you want to delete this product?');"
                 class="btn btn-danger btn-lg">
                üóë Delete Product
              </a>
            </div>

          <% } %>

        </div>
      </div>

      <hr>

      <!-- ======================= -->
      <!-- BACK NAVIGATION BUTTON -->
      <!-- ======================= -->

      <% if (user.role === "admin") { %>
        <a href="/inventory" class="btn btn-outline-secondary w-100 mt-3">
          ‚¨Ö Back to Inventory
        </a>
      <% } else { %>
        <a href="/shopping" class="btn btn-outline-secondary w-100 mt-3">
          ‚¨Ö Back to Shopping
        </a>
      <% } %>

    </div>

  <% } else { %>

    <p class="text-center text-muted mt-5">‚ùå Product not found.</p>

  <% } %>

</div>

</body>
</html>
