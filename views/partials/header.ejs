<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Supermarket App</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

 
</head>

<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/shopping">Supermarket App</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="mainNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">

          <li class="nav-item"><a class="nav-link" href="/shopping">Products</a></li>
          <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>
          <li class="nav-item"><a class="nav-link" href="/purchaseHistory">Purchase History</a></li>

          <% if (user && user.role === 'admin') { %>
            <li class="nav-item"><a class="nav-link" href="/inventory">Inventory</a></li>
            <li class="nav-item"><a class="nav-link" href="/admin/viewFeedback">View Feedback</a></li>
            <li class="nav-item"><a class="nav-link" href="/viewusers">View Users</a></li>
          <% } %>

        </ul>

        <ul class="navbar-nav">
          <% if (user) { %>

            <!-- ðŸ†• Feedback moved to logout left -->
            <li class="nav-item">
              <a class="btn btn-warning btn-sm me-3" href="/customerFeedback">
                Feedback for Us
              </a>
            </li>

            <li class="nav-item">
              <span class="navbar-text text-white me-3">
                Hi, <%= user.username %> (<%= user.role %>)
              </span>
            </li>

            <li class="nav-item">
              <a class="btn btn-outline-light btn-sm" href="/logout">Logout</a>
            </li>

          <% } else { %>

            <li class="nav-item">
              <a class="btn btn-outline-light btn-sm me-2" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="btn btn-warning btn-sm" href="/register">Register</a>
            </li>

          <% } %>
        </ul>

      </div>
    </div>
  </nav>

  <div class="container mt-4">
