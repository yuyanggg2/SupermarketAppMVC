<%- include("partials/headerAdmin") %>

<style>
  body {
    background: linear-gradient(135deg, #ffe9f6, #ffd6f3, #ffefff);
    font-family: 'Poppins', sans-serif;
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.55);
    backdrop-filter: blur(12px);
    border-radius: 22px;
    padding: 35px;
    box-shadow: 0 8px 30px rgba(255, 105, 180, 0.2);
    width: 520px;
    animation: fadeIn 0.5s ease;
  }

  h2 {
    color: #ff4fa1;
    font-weight: 700;
    text-shadow: 0 2px 6px rgba(255, 0, 120, 0.2);
  }

  label {
    font-weight: 600;
    color: #d63384;
  }

  .btn-pink {
    background: linear-gradient(90deg, #ff66b3, #ff85d8);
    border: none;
    border-radius: 14px;
    font-weight: 600;
    transition: 0.25s;
  }

  .btn-pink:hover {
    background: linear-gradient(90deg, #ff4f9d, #ff73c8);
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(255, 0, 150, 0.25);
  }

  .btn-outline-pink {
    border-radius: 14px;
    border: 2px solid #ff66b3;
    color: #ff4fa1;
    font-weight: 600;
  }

  .btn-outline-pink:hover {
    background: #ff66b3;
    color: white;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(15px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>


<div class="container d-flex justify-content-center mt-5">

  <div class="glass-card">

    <h2 class="text-center mb-4">üå∏ Add New Product</h2>

    <form action="/addproduct" method="POST" enctype="multipart/form-data">

      <div class="mb-3">
        <label>Product Name</label>
        <input 
          type="text" 
          class="form-control form-control-lg"
          name="name"
          placeholder="e.g. Strawberry Cake"
          required
        >
      </div>

      <div class="mb-3">
        <label>Quantity</label>
        <input
          type="number"
          class="form-control form-control-lg"
          name="quantity"
          min="0"
          step="1"
          placeholder="e.g. 30"
          required
        >
      </div>

      <div class="mb-3">
        <label>Price ($)</label>
        <input
          type="number"
          class="form-control form-control-lg"
          name="price"
          min="0"
          step="0.01"
          placeholder="e.g. 12.90"
          required
        >
      </div>

      <div class="mb-4">
        <label>Product Image</label>
        <input
          type="file"
          class="form-control form-control-lg"
          name="image"
          accept="image/*"
          required
        >
      </div>

      <!-- Buttons -->
      <button type="submit"
        class="btn btn-pink btn-lg w-100 mb-3">
        ‚ú® Add Product
      </button>

      <a href="/inventory"
        class="btn btn-outline-pink btn-lg w-100">
        ‚Üê Back to Inventory
      </a>

    </form>

  </div>

</div>

<br><br>
