<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <title>Checkout</title>

  <style>
    body {
      background: #f7f8fa;
      font-family: 'Poppins', sans-serif;
    }

    .checkout-card {
      background: white;
      border-radius: 15px;
      padding: 25px;
      box-shadow: 0 6px 14px rgba(0, 0, 0, 0.08);
    }

    .checkout-title {
      font-size: 2rem;
      font-weight: 700;
      color: #0d6efd;
    }

    .form-control,
    .form-select {
      height: 55px;
      font-size: 1.1rem;
      border-radius: 12px;
    }

    .order-summary {
      background: white;
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 6px 14px rgba(0, 0, 0, 0.08);
    }

    .summary-item {
      display: flex;
      justify-content: space-between;
      font-size: 1.1rem;
      margin-bottom: 10px;
    }

    .btn-pay {
      height: 60px;
      font-size: 1.3rem;
      font-weight: 600;
      border-radius: 15px;
    }
  </style>
</head>

<body>

<div class="container py-5">

  <div class="text-center mb-5">
    <h1 class="checkout-title">Checkout</h1>
    <p class="text-muted">Complete your purchase by filling in the details below.</p>
  </div>

  <div class="row g-4">

    <!-- LEFT: User Info -->
    <div class="col-md-7">
      <div class="checkout-card">

        <form action="/checkout" method="POST">

          <label class="form-label fs-5">Full Name</label>
          <input type="text" name="name" class="form-control mb-4" placeholder="John Tan" required>

          <label class="form-label fs-5">Shipping Address</label>
          <input type="text" name="address" class="form-control mb-4" placeholder="123 Orchard Road, Singapore" required>

          <label class="form-label fs-5">Payment Method</label>
          <select name="paymentMethod" class="form-select mb-4">
            <option value="Credit Card">ðŸ’³ Credit Card</option>
            <option value="PayNow">ðŸ“± PayNow</option>
            <option value="Cash">ðŸ’µ Cash on Delivery</option>
          </select>

          <button type="submit" class="btn btn-success w-100 btn-pay">
            Confirm Order âœ”
          </button>

        </form>

      </div>
    </div>

    <!-- RIGHT: Order Summary -->
    <div class="col-md-5">
      <div class="order-summary">
        <h4 class="fw-bold mb-3">ðŸ§¾ Order Summary</h4>

        <% let total = 0; %>

        <% for (let i = 0; i < cart.length; i++) { %>
          <div class="summary-item">
            <span><%= cart[i].productName %> x <%= cart[i].quantity %></span>
            <span>$<%= (cart[i].price * cart[i].quantity).toFixed(2) %></span>
          </div>
          <% total += cart[i].price * cart[i].quantity; %>
        <% } %>

        <hr>

        <div class="summary-item fw-bold fs-5">
          <span>Total</span>
          <span>$<%= total.toFixed(2) %></span>
        </div>

      </div>
    </div>

  </div>
</div>

</body>
</html>

